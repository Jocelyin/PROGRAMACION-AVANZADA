<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TAREA_10_NET_MAUII.MainPage">

   
        <VerticalStackLayout>
            <Button Text="Cargar Datos" Clicked="OnLoadDataClicked"/>
            <CollectionView x:Name="PartsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding PartName}" FontSize="20"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage>


<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="a2233336156_tareas_unidad01.MainPage">
    <VerticalStackLayout
        Padding="30"
        Spacing="25">

        <!-- Etiqueta para mostrar información del triángulo -->
        <Label
            Text="Triángulo: Base 5, Altura 2"
            FontSize="18"
            HorizontalOptions="Center" />

        <!-- Etiqueta para mostrar el resultado -->
        <Label
            x:Name="ResultadoLabel"
            Text="El resultado aparecerá aquí"
            FontSize="16"
            TextColor="Blue"
            HorizontalOptions="Center" />

        <!-- Botón para calcular -->
        <Button
            Text="Calcular"
            Clicked="OnCalcularClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
